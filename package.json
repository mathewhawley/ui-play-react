{
  "private": true,
  "name": "ui-play-react",
  "version": "1.0.0",
  "description": "A collection of UI development learning exercises",
  "author": "Mathew Hawley",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.20.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "chalk": "^1.1.3",
    "codacy-coverage": "^2.0.0",
    "css-loader": "^0.26.0",
    "enzyme": "^2.6.0",
    "eslint": "^3.13.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-react": "^6.8.0",
    "html-webpack-plugin": "^2.26.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^18.0.0",
    "node-sass": "^4.1.1",
    "normalize.scss": "^0.1.0",
    "ora": "^0.4.0",
    "pre-commit": "^1.2.1",
    "react-addons-test-utils": "^15.4.1",
    "react-test-renderer": "^15.4.1",
    "sass-loader": "^4.1.0",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^15.0.0",
    "stylelint-webpack-plugin": "^0.5.0",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "babel-runtime": "^6.20.0",
    "classnames": "^2.2.5",
    "lodash": "^4.17.2",
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  },
  "scripts": {
    "start": "node scripts/start",
    "lint": "yarn lint:scss && yarn lint:js",
    "lint:js": "eslint . --cache",
    "lint:scss": "stylelint \"**/*.scss\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:report": "cat ./coverage/lcov.info | ./node_modules/.bin/codacy-coverage",
    "pre-commit-msg": "echo 'Performing pre-commit checks...' && exit 0"
  },
  "pre-commit": [
    "pre-commit-msg",
    "lint",
    "test"
  ],
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(scss|css|less)$": "identity-obj-proxy"
    }
  }
}
